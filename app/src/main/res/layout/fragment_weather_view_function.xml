    <com.github.matteobattilana.weather.WeatherView
        android:id="@+id/weather_view_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.github.matteobattilana.weather.WeatherView
        android:id="@+id/weather_view_three"
